extends main.pug

block append head
    script(src='../js/product.js')
block content
    script.
        var model = !{model};
        var localization = !{localizationJson};
    div(class="row gap-20 masonry pos-r" ng-controller="productController")
        div(class="masonry-sizer col-md-12")
        div(class="masonry-item col-md-12")
            div(class="bgc-white p-20 bd")
                if operation == "add"
                    h6(class="c-grey-900") #{localization.newProduct}
                else
                    h6(class="c-grey-900") #{localization.product}
                div(class="mT-30")
                    <h1>AAAA-BB-CCC-DDD</h1>
                    <br/>    
                    div(class="form-row")
                        div(class="form-group col-md-6")
                            label(for="alloyNoCode") #{localization.alloyNo} *
                            input(type="text" class="form-control" id="alloyNoCode" name="alloyNoCode" ng-model="model.alloyNoCode" ng-disabled=''+disabled )
                        div(class="form-group col-md-6")
                            label(for="alloyNoEx") #{localization.explanation}
                            input(type="text" class="form-control" id="alloyNoEx" name="alloyNoEx" ng-model="model.alloyNoEx" ng-disabled=''+disabled)
                    div(class="form-row")
                        div(class="form-group col-md-6")
                            label(for="productionTypeCode") #{localization.productionType} *
                            input(type="text" class="form-control" id="productionTypeCode" name="productionTypeCode" ng-model="model.productionTypeCode" ng-disabled=''+disabled)
                        div(class="form-group col-md-6")
                            label(for="productionTypeEx") #{localization.explanation}
                            input(type="text" class="form-control" id="productionTypeEx" name="productionTypeEx" ng-model="model.productionTypeEx" ng-disabled=''+disabled)
                    div(class="form-row")
                        div(class="form-group col-md-6")
                            label(for="productDetail1Code") #{localization.productDetail1} *
                            input(type="text" class="form-control" id="productDetail1Code" name="productDetail1Code" ng-model="model.productDetail1Code" ng-disabled=''+disabled)
                        div(class="form-group col-md-6")
                            label(for="productDetail1Ex") #{localization.explanation}
                            input(type="text" class="form-control" id="productDetail1Ex" name="productDetail1Ex" ng-model="model.productDetail1Ex" ng-disabled=''+disabled)
                    div(class="form-row")
                        div(class="form-group col-md-6")
                            label(for="productDetail2Code") #{localization.productDetail2} *
                            input(type="text" class="form-control" id="productDetail2Code" name="productDetail2Code" ng-model="model.productDetail2Code" ng-disabled=''+disabled)
                        div(class="form-group col-md-6")
                            label(for="productDetail2Ex") #{localization.explanation}
                            input(type="text" class="form-control" id="productDetail2Ex" name="productDetail2Ex" ng-model="model.productDetail2Ex" ng-disabled=''+disabled)
                    div(class = "form-group" style="color:red;margin-top:35px;margin:0; padding:0; height:26px; ")
                        p(id="errMessage") !{message}
                    div(class = "form-group" style="color:green;margin-top:35px;margin:0; padding:0; height:26px; ")
                        p(id="message") !{message}
                    if (operation == "add" || operation == "edit")
                        button(type="submit" class="btn btn-success" style="margin-top:35px;" ng-click="save()" id="save") #{localization.save}
                    else if operation == "delete"
                        button(type="submit" class="btn btn-danger" style="margin-top:35px;" ng-click="save()" id="save") #{localization.delete}
                    div
                        a(href="../productlist" type="primary" class="btn btn-primary" style="margin-top:14px;") #{localization.goBack}
                    div
                        p(style="margin-top:35px;")
                            i * #{localization.requiredFields}
                        